
mixin labels(ids)
    each obj in getAll(ids)
        = ' '
        span.label.label-info= obj.data.title

doctype html
html
    head
        title: block title
            | Modularity Handbook
        link(rel="stylesheet",href="https://claycss.com/styles/main.css")
        style.
            .card-link {
                color: inherit;
                text-decoration: none;
                display: block;
                transition: all 300ms;
            }

            .card-link:hover,
            .card-link:focus {
                color: inherit;
                text-decoration: none;
                box-shadow: 0px 0px 0px 0px black, 0px 0px 0px 4px dodgerblue;
            }

            .site-container {
                margin: 0px auto;
                padding: 0px 20px;
                max-width: 600px;
            }

            .site-container header {
                margin: 40px auto 20px;
            }
            
            .site-container section {
                margin: 30px 0px 0px;
            }

            .table-cell-link {
                display: block;
                padding: 0.2em 0.4em;
                margin: -0.2em -0.4em;
                border-radius: 4px;
            }

            .table-cell-link::after {
                content: 'â†’';
                float: right;
                padding-left: 0.5em;
            }

            .table-cell-link:hover,
            .table-cell-link:focus,
            .table-cell-link:active {
                background: #f0f5ff;
                text-decoration: none;
            }

            .table-hover .table-cell-link:hover,
            .table-hover .table-cell-link:focus,
            .table-hover .table-cell-link:active {
                background: rgba(0, 0, 0, 0.05);
                text-decoration: none;
            }

            .table-cell-link + .table-cell-link {
                margin-top: 0.6em;
            }
    body
        block content
